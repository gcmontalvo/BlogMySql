{% extends "Layout.html.twig"%}


{% block content %}
    <div class="col-lg-6">
        
        <h2>Lista de Etiquetas</h2>
        
        <table class="table table-striped table-sm table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Decripci√≥n</th>
                    <th colspan="3">Opciones</th>
                </tr>
            </thead>
            <tbody>
            {% for tag in tags %}
                <tr>
                    <td><a href="{{ path('tag_show', { 'id': tag.id }) }}">{{ tag.id }}</a></td>
                    <td>{{ tag.name }}</td>
                    <td>{{ tag.description }}</td>
                    <td>
                        <a href="{{ path('tag_show', { 'id': tag.id }) }}">ver</a>
                    </td>
                    <td>     
                        <a href="{{ path('tag_edit', { 'id': tag.id }) }}">editar</a>
                    </td>
                    <td>     
                        {% if tag.entryTag|length == 0 %}
                            <a class="text-danger" href="{{ path('tag_delete_aux', {'id': tag.id}) }}">eliminar</a>
                        {% else %}
                            <a class="text-muted" href="#">eliminar</a>
                        {% endif %}
                        
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-primary" href="{{ path('tag_new') }}">Nuevo</a>
    </div>
    
    
    
{% endblock %}
